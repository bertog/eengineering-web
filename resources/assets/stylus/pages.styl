.splash
	flex: 1
	display: flex
	align-content: center
	justify-content: center
	flex-wrap: wrap
	position: relative
	overflow: hidden
	background: rgb(5,5,5)
	img
		position: absolute
		top: 0 
		left: 0
		width: 100%
		z-index: 0
		opacity: .5
		filter: blur(5px)
	h1, h3
		margin: 0
		padding: 0
		text-align: center
		z-index: 10
		color: pale-whiter
	h3 
		flex-basis: 100%
		font-weight: 300 
		font-style: italic
		text-transform: lowercase
		margin-bottom: 10px;
	h1
		padding: 20px 100px
		margin-bottom: 10px
		border 1px solid whiter
		font-size: 54px
		font-weight: 700
		letter-spacing: 1.5
		text-transform: uppercase
