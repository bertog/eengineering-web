html, body
	height: 100%
	font-family: lato

header
	background: pale-blue 
	h1 
		margin: 0
	
aside
	background: deep-blue
	ul, li 
		margin: 0
		padding: 0
	ul 
		margin-top: 20px
		list-style: none
		li
			display: block
			width: 100%
			text-align: center
			padding: 10px
			a
				color: whiter
				text-decoration: none
				transition: all .3s ease
				&:hover
					color: orangish

main
	background: blue

article
	background: green 

footer
	background: pale-blue
	color: whiter
	
/* Flexbox */

.container
	height: 100%
	display: flex 
	flex-direction: column
	
header, footer
	width: 100%
	
header
	flex-basis: 80px;
	display: flex
	flex-direction: row
	align-items: center
	justify-content: flex-start
	
footer
	flex-basis: 50px;
	
main
	flex: 1
	display: flex
	flex-wrap: wrap
	
aside
	flex-basis: 105px
	
article
	flex: 1
	display: flex
	flex-direction: column
	
footer
	display: flex
	justify-content: space-between
	
@media screen and (max-width: 480px)
	aside, article
		flex-basis: 100%
		
/* Sub Components */
header
	img
		width: 70px
		height: auto;
		margin-left: 20px
		
	h1 
		color: pale-whiter
		font-size: 24px
		text-transform: uppercase
		letter-spacing: 2px
		margin-left: 60px;

footer
	ul
		list-style: none
		li 
			display: inline-block
			padding: 0 20px
			border-right: solid 1px pale-whiter
			font-weight: 300
			font-size: 12px
			&:last-child
				border: none
		a 
			font-weight: 400
			color: whiter
			text-decoration: none
			transition: all .3s ease
			&:hover
				color: orangish