.blog
	width: 100%
	flex: 1
	background: whiter
	padding: 0 100px
	+has(header)
		width: 100%
		height: 300px
		overflow: hidden
		position: relative
		img
			position: absolute
			top: 0
			left: 0
			width: 100%
		h1
			position: absolute
			left: 0
			bottom: 30px 
			width: 100%
			color: pale-whiter
			background: orangish
			padding: 15px 20px
			font-size: 24px
			letter-spacing: -1px 
			font-weight: 300
			text-transform: uppercase
	+has(post)
		p 
			text-align: justify
			font-weight: 300
			color: blacky
	+has(footer)
		margin-top: 30px
		p
			font-weight: 300
			color: p-gray
		a 
			color: deep-blue
			text-decoration: none
			&:hover
				color: orangish
			i
				margin-right: 5px
	+has(index)
		ul
			list-style: none
			margin: 0
			padding: 0
			li
				display: block
				width: 100%
				height: 200px
				padding: 10px
				overflow: hidden
				text-align: center
				margin-bottom: 20px
				a
					display: block 
					width: 75%
					padding: 10px
					text-decoration: none
					text-transform: uppercase
					color: whiter;
					background: orangish;
				img
					width: 75%;
					height: auto
			
			